{
  "name": "weather-api",
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "concurrently --kill-others \"npm run dev:client\" \"npm run dev:serve\"",
    "dev": "concurrently --kill-others \"npm start\" \"npm run dev:prettier\"",
    "dev:client": "cd ./client && yarn start",
    "dev:serve": "nodemon index.js",
    "dev:prettier": "onchange '**/*.{js,jsx}' -- prettier --write {{changed}}",
    "heroku": "NODE_ENV=production nodemon index.js"
  },
  "dependencies": {
    "axios": "^0.17.1",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "express": "^4.16.2"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.2",
    "concurrently": "^3.5.1",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "onchange": "^3.3.0",
    "prettier": "^1.11.1"
  }
}
